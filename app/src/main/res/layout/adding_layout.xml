<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/prev_activity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/ic_prev_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="finish"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/сhoose_point_on_map"
        android:layout_margin="20dp"
        android:textColor="@color/primaryTextColor"
        android:textSize="16dp"/>

    <Button
        android:id="@+id/open_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16sp"
        android:text="Choose this point"
        android:padding="15dp"
        style="@style/TitleText"
        android:visibility="invisible"
        android:background="@drawable/button_shape"
        android:onClick="openBottomSheet"/>
    
</RelativeLayout>