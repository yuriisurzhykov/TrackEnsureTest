<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_with_corners"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/edit_dialog_button"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Edit this note" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/delete_dialog_button"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TitleText"
            android:textColor="@color/secondaryTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Delete this note" />
    </LinearLayout>

</LinearLayout>